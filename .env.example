# BlockSwarms Trade XBT - Environment Variables
# Use this as a template for your .env and .env.local files

# ===========================================================
# REQUIRED Environment Variables
# ===========================================================

# Solana Configuration
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_WSS_URL=wss://api.mainnet-beta.solana.com

# AI Provider API Keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# MongoDB Database Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/blockswarms?retryWrites=true&w=majority

# Token Data APIs
COINGECKO_API_KEY=your-coingecko-key-here

# ===========================================================
# OPTIONAL Environment Variables
# ===========================================================

# AI Model Configuration
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229
# GROQ_API_KEY=gsk_your-key-here
# GROQ_DEFAULT_MODEL=llama3-70b-8192
DEFAULT_AI_PROVIDER=anthropic

# Additional Token APIs
# JUPITER_API_KEY=your-jupiter-key-here

# MongoDB Configuration
# MONGODB_CONNECTION_LIMIT=10
# MONGODB_TIMEOUT_MS=30000

# Application Configuration
NEXT_PUBLIC_APP_VERSION=1.0.0
NODE_ENV=development
# NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Authentication Settings
# JWT_SECRET=your-secret-key-here
# TOKEN_EXPIRY=7d

# For Vercel Deployment
VERCEL_ENV=development
# VERCEL_URL=localhost:3000
# VERCEL_REGION=cdg1

# Analytics and Monitoring
# ANALYTICS_ID=your-analytics-id
# SENTRY_DSN=your-sentry-dsn